import turtle
import random

grass = turtle.Turtle()
grass.color("darkgreen")
grass.hideturtle()
grass.speed(150)
grass.penup()
grass.goto(-1000,0)
grass.pendown()
sky = turtle.Turtle()
sky.color("lightblue")
sky.hideturtle()
sky.speed(150)
sky.pensize(500)
sky.penup()
sky.goto(0, 250)
sky.pendown()
sky.forward(800)
sky.left(180)
sky.forward(1600)
floor = turtle.Turtle()
floor.color("darkorange4")
floor.hideturtle()
floor.speed(150)
floor.pensize(500)
floor.penup()
floor.goto(0, -250)
floor.pendown()
floor.forward(800)
floor.left(180)
floor.forward(1600)

def ground():
    grass.pensize(15)
    grass.forward(random.randint(10,30))

def blades():
    x  = random.randint(30,60)
    grass.pensize(random.randint(5,15))
    grass.left(90)
    grass.forward(x)
    grass.right(180)
    grass.forward(x)
    grass.left(90)

blades()
ground()
blades()
